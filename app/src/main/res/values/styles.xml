<!--suppress ALL -->
<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="PrimaryText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="HeaderText" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/header_grey_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinner_style" parent="AppTheme">
        <item name="android:background">@drawable/gradient_spinner</item>
    </style>

    <style name="AppTheme.ProfileEdit.Row" parent="AppTheme">
        <!--<item name="android:textColor">@color/darkGrayTextColor</item>-->
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:paddingBottom">22dp</item>
        <item name="android:textAppearance">@style/SecondaryText</item>
        <item name="android:background">@drawable/bottom_line</item>
        <item name="android:textStyle">normal</item>
    </style>


</resources>