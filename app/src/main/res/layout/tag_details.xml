<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_margin="30dp">

                <RelativeLayout
                    android:id="@+id/rel0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <ImageButton
                        android:id="@+id/more"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center_vertical"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:src="@android:drawable/ic_menu_more"/>

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        style="@style/PrimaryText"/>

                </RelativeLayout>

                <TextView
                    style="@style/SecondaryText"
                    android:id="@+id/description"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/rel0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/divider"
                    android:layout_below="@id/description"
                    android:layout_margin="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/header_grey_text"/>

                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_below="@id/divider">

                    <ImageButton
                        android:id="@+id/to_map"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center_vertical"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/to_map"/>

                    <TextView
                        style="@style/SecondaryText"
                        android:id="@+id/localisation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/to_map"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_below="@id/rel1">

                    <TextView
                        style="@style/SecondaryText"
                        android:id="@+id/shutdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/members"
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/rel2"
                    android:text="@string/tag_participants"
                    style="@style/SecondaryText"/>


                <com.pkmmte.view.CircularImageView
                    android:id="@+id/photo"
                    android:layout_margin="10dp"
                    android:layout_below="@id/members"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    app:border="true"
                    app:border_width="2dp"
                    app:border_color="#df6231" />

            </RelativeLayout>
    </ScrollView>
</FrameLayout>

